<h1>Book Detail</h1>

<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Published on:</strong>
  <%= @book.published_on %>
</p>

<p>
  <strong>Showing:</strong>
  <%= @book.showing %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @book.tags.map(&:name).join(', ') %>
</p>

<p>
  <strong>Product Image:</strong>
  <% if @book.picture.exists? %>
    <%= image_tag(@book.picture, width:300) %>
  <% else %>
    <%= 'No Image' %>
  <% end %>
</p>
<%= link_to 'Order', new_order_path(book_id: @book), class: "btn btn-primary" %>
<br><br>
<%= link_to 'Back', products_path %>
