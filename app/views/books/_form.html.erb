<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div class="card border-danger">
      <div class="card-header bg-danger text-white" id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      </div>
      <div class="card-body">
        <ul class="mb-0">
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>  
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :published_on %>
    <%= form.date_select :published_on, id: :book_published_on, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :showing %>
    <%= form.check_box :showing, id: :book_showing, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, id: :boosk_price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :tags %>
    <%= collection_check_boxes :book, :tag_ids, Tag.all, :id, :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :product_image %>
    <%= form.file_field :picture, id: :book_picture %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary'%>
  </div>

<% end %>
