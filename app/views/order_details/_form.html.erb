<%= form_with(model: @order_detail, local: true) do |form| %>

  <div class="form-group">
    <% form.label :book %>
    <% form.hidden_field :book_id %>
  </div>

  <div class="form-group">
    <%= form.label :quantity%>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit "confirm", class: "btn btn-primary" %>
  </div>

<% end %>